{
  "name": "ReYohoho",
  "version": "1.1.14",
  "main": "dist/main.js",
  "author": "ReYohoho",
  "type": "module",
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@types/electron": "^1.6.12",
    "@types/node": "^22.12.0",
    "cross-env": "^7.0.3",
    "electron": "^34.0.1",
    "electron-builder": "^26.0.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.5.0",
    "cross-fetch": "^4.1.0",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.3.9"
  },
  "scripts": {
    "build": "tsc && cp src/preload.js dist/preload.js",
    "start": "yarn build && electron .",
    "build:win": "rm -rf ./dist && yarn build && electron-builder --win --publish=never",
    "build:mac": "rm -rf ./dist && yarn build && electron-builder --mac --x64 --arm64 --publish=never",
    "build:linux": "rm -rf ./dist && yarn build && electron-builder --linux --publish=never"
  },
  "build": {
    "publish": {
      "provider": "github",
      "owner": "reyohoho",
      "repo": "reyohoho-desktop"
    },
    "productName": "ReYohoho",
    "appId": "ru.reyohoho",
    "files": [
      "dist/main.js",
      "dist/torrents.js",
      "dist/preload.js",
      "package.json",
      "loader.html",
      "auth-window.html",
      "torrent-wizard.html",
      "magnet-input.html",
      "mirror-selection.html"
    ],
    "protocols": [
      {
        "name": "ReYohoho",
        "schemes": [
          "reyohoho"
        ]
      }
    ],
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "icons/256x256.png",
      "artifactName": "ReYohoho.Setup.${version}_${arch}.${ext}",
      "extraFiles": [
        {
          "from": "prebuilts/windows/player",
          "to": "resources/app/dist/prebuilts/windows/player"
        }
      ]
    },
    "mac": {
      "asar": false,
      "target": "dmg",
      "artifactName": "ReYohoho.Setup.${version}_${arch}.${ext}"
    },
    "linux": {
      "asar": false,
      "target": "AppImage",
      "artifactName": "ReYohoho.Setup.${version}_${arch}.${ext}",
      "category": "AudioVideo",
      "desktop": {
        "entry": {
          "Name": "ReYohoho",
          "Terminal": "false",
          "Type": "Application",
          "MimeType": "x-scheme-handler/reyohoho"
        }
      }
    },
    "nsis": {
      "deleteAppDataOnUninstall": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "oneClick": false
    }
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
