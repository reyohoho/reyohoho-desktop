{
  "name": "ReYohoho",
  "version": "1.1.2",
  "main": "dist/main.js",
  "author": "ReYohoho",
  "type": "module",
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@types/electron": "^1.6.12",
    "@types/node": "^22.12.0",
    "cross-env": "^7.0.3",
    "electron": "^34.0.1",
    "electron-builder": "^26.0.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.5.0",
    "cross-fetch": "^4.1.0",
    "custom-electron-prompt": "^1.5.8",
    "electron-updater": "^6.3.9",
    "electron-store": "^10.0.1"
  },
  "scripts": {
    "build": "tsc && cp src/preload.js dist/preload.js",
    "start": "npm run build && electron .",
    "build:win": "rm -rf ./dist && npm run build && electron-builder --win --publish=never",
    "build:mac": "rm -rf ./dist && npm run build && electron-builder --mac --x64 --arm64 --publish=never",
    "build:linux": "rm -rf ./dist && npm run build && electron-builder --linux --publish=never"
  },
  "build": {
    "publish": {
      "provider": "github",
      "owner": "reyohoho",
      "repo": "reyohoho-desktop"
    },
    "productName": "ReYohoho",
    "appId": "ru.reyohoho",
    "files": [
      "dist/main.js",
      "dist/torrents.js",
      "dist/preload.js",
      "package.json",
      "loader.html"
    ],
    "protocols": [
      {
          "name": "ReYohoho",
          "schemes": [
              "reyohoho"
          ]
      }
   ],
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "icons/256x256.png",
      "artifactName": "ReYohoho.Setup.${version}_${arch}.${ext}",
      "extraFiles": [
        {
          "from": "prebuilts/windows/player",
          "to": "resources/app/dist/prebuilts/windows/player"
        }
      ]
    },
    "mac": {
      "asar": false,
      "target": "dmg",
      "artifactName": "ReYohoho.Setup.${version}_${arch}.${ext}"
    },
    "linux": {
      "asar": false,
      "target": "AppImage",
      "artifactName": "ReYohoho.Setup.${version}_${arch}.${ext}"
    },
    "nsis": {
      "deleteAppDataOnUninstall": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "oneClick": false
    }
  }
}
